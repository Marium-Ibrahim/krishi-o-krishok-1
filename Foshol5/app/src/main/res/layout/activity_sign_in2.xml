<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="foshol.company.com.foshol.SignIn2">

    <EditText
        android:id="@+id/editTextEmailLogin"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ইমেইল দিন"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/editTextPasswordLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/editTextPasswordLogin"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="পাসওয়ার্ড দিন"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/buttonSignin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="সাইন ইন"
        android:layout_marginBottom="117dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/editTextEmailLogin"
        android:layout_alignStart="@+id/editTextEmailLogin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linkSignUp"
        android:text="নতুন একাউন্ট খুলুন"
        android:textAlignment="center"
        android:layout_marginBottom="58dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/buttonSignin"
        android:layout_alignStart="@+id/buttonSignin" />



</RelativeLayout>
