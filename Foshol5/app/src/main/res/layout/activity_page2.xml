<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="foshol.company.com.foshol.Page2"
    android:background="@drawable/grass_light_background_87014_300x188"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/riceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ধান"
        android:textSize="25sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:background="#32FFFFFF"/>

    <Button
        android:id="@+id/wheatButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="গম"
        android:textSize="25sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:background="#32FFFFFF"/>


    <Button
        android:id="@+id/patButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="পাট"
        android:textSize="25sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:background="#32FFFFFF"/>

    <Button
        android:id="@+id/vuttaButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ভুট্টা"
        android:textSize="25sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#32FFFFFF"
        android:layout_marginBottom="30dp"/>
</LinearLayout>
