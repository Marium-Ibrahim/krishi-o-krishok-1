<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="foshol.company.com.foshol.PataRoot"
    android:background="#489bb280"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="লক্ষণ:\nএ রোগে গমের কান্ড, পাতা ও পর্ব সন্ধিতে এ রোগ দেখা যায়। রোগের আক্রমণে লোহার মরিচার মতো লালচে রঙের দাগ পড়ে। দাগগুলো পরে কালো রঙ হয়।"
                android:textSize="17sp"
                android:layout_margin="10dp"
                android:padding="10dp"
                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="0.02"
                app:srcCompat="@drawable/leafrust" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="ব্যবস্থাপনা:\nআক্রান্ত ক্ষেতের নাড়া পুড়িয়ে ফেলা। রোগ প্রতিরোধ ক্ষমতা সম্পন্ন জাত ব্যবহার করা। সুষম সার ব্যবহার করা। বীজ বপনের পূর্বে বীজ শোধন করা যথা ৩ গ্রাম ভিটাটেক্স, বা গ্রাম ব্যাভিষ্টিন/ কেজি বীজ। অনুমোদিত বালাইনাশক ব্যবহার করা যথা টিল্ট ২৫০ ইসি ১ মিলি বা ক্যাালিক্সিন ০.৫ মিলি প্রতি লিটার পানি।"
                />


        </LinearLayout>
    </ScrollView>



</RelativeLayout>
