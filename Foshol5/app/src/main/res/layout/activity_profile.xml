<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="foshol.company.com.foshol.Profile">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/k"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="লগ ইন হচ্ছে...."
        android:textColor="#0000ff"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="150dp"
        />

    <TextView
        android:id="@+id/krishok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="krishok"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/coloractualOliveGreen"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ListView
        android:id="@+id/listViewKrishok"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ListView
        android:id="@+id/listViewSeller"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ListView
        android:id="@+id/listViewOfficer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
</LinearLayout>
