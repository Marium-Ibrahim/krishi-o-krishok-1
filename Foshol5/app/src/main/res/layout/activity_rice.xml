<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="foshol.company.com.foshol.Rice"
    android:orientation="vertical"
    android:background="@drawable/blurback"
    android:gravity="center"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/foringButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="আমন ধানের ক্ষতিকর বাদামী গাছ ফড়িং"
                android:textSize="17sp"
                android:background="#48FFFFFF"
                />
            <Button
                android:id="@+id/borogButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="বোরো ধানের পাতা মোড়ানো পোকা"
                android:textSize="17sp"
                android:background="#48FFFFFF"
                />
            <Button
                android:id="@+id/bonmastoButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="বোরো ধানের বস্নাস্ট রোগ"
                android:textSize="17sp"
                android:background="#48FFFFFF"
                />
            <Button
                android:id="@+id/kholPoraButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="বোরো ধানের পাতাপোড়া রোগ"
                android:textSize="17sp"
                android:background="#48FFFFFF"
                />
            <Button
                android:id="@+id/boroPamriButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="বোরো ধানের পামরি এবং মাজরা পোকা"
                android:textSize="17sp"
                android:background="#48FFFFFF"
                />

            <Button
                android:id="@+id/rGPButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="ধানের গুড়িপঁচা রোগ"
                android:textSize="17sp"
                android:background="#48FFFFFF"
                />

            <Button
                android:id="@+id/rTungutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="ধানের টুংরো রোগ"
                android:textSize="17sp"
                android:background="#48FFFFFF"
                />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
