<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="foshol.company.com.foshol.Wheat"
    android:background="@drawable/blurrybackgroundpictures"
    android:gravity="center"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/blotchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="গমের মাজরা পোকা"
                android:textSize="17sp"
                android:background="#48FFFFFF"
                />

            <Button
                android:id="@+id/scabButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="গমের জাব পোকা"
                android:textSize="17sp"
                android:background="#48FFFFFF"
                />
            <Button
                android:id="@+id/fofuButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="গমের ব্লাস্ট রোগ"
                android:textSize="17sp"
                android:background="#48FFFFFF"
                />
            <Button
                android:id="@+id/pataHoludButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="গমের পাতা ঝলসানো রোগ"
                android:textSize="17sp"
                android:background="#48FFFFFF"
                />
            <Button
                android:id="@+id/pataRootButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="গমের পাতার মরিচা রোগ"
                android:textSize="17sp"
                android:background="#48FFFFFF"
                />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
