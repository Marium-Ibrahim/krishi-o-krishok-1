<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearlayout">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:text="বিক্রেতার তথ্য"
                android:textColor="#0000FF"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="144dp"
                tools:layout_editor_absoluteY="22dp" />


            <TextView
                android:id="@+id/tv2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/tv3"
                android:layout_alignStart="@+id/tv3"
                android:layout_below="@+id/tv1"
                android:layout_marginTop="26dp"
                android:text="নাম"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv2"
                android:layout_alignBottom="@+id/tv2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:hint="আপনার নাম লিখুন"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignBaseline="@+id/et2"
                android:layout_alignBottom="@+id/et2"
                android:layout_alignLeft="@+id/tv6"
                android:layout_alignStart="@+id/tv6"
                android:text="ইমেইল"
                android:textSize="15dp" />


            <EditText
                android:id="@+id/et2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="90dp"
                android:ems="10"
                android:hint="আপনার ইমেইল লিখুন"
                android:inputType="textEmailAddress" />


            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="150dp"
                android:text="পাসওয়ার্ড"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/tv4"
                android:layout_alignStart="@+id/tv4"
                android:layout_marginTop="200dp"
                android:text="পাসওয়ার্ড নিশ্চিত করুন"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv3"
                android:ems="10"
                android:hint="আপনার পাসওয়ার্ড দিন"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/et4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv5"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:hint="পুনরায় পাসওয়ার্ড দিন"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="250dp"
                android:text="জেলা"
                android:textSize="15dp" />
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et4"
                android:layout_alignStart="@+id/et4"
                android:layout_alignTop="@+id/tv6" />


            <TextView
                android:id="@+id/tv7"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="295dp"
                android:text="শহর"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv7"
                android:layout_alignBottom="@+id/tv7"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:hint="আপনার শহর"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tv9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="355dp"
                android:text="দোকানের নাম"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv9"
                android:layout_alignBottom="@+id/tv9"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:hint="দোকানের নাম দিন"
                android:inputType="textPersonName" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn3"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="submit"
                app:srcCompat="@drawable/submit"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/listViewSeller"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>


</ScrollView>
